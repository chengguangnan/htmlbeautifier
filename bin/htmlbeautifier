#!/usr/bin/env ruby
require 'htmlbeautifier'
require 'fileutils'

def beautify(name, input, output)
  output.puts HtmlBeautifier::Beautifier.new.beautify(input)
rescue => e
  raise "Error parsing #{name}: #{e}"
end

if ARGV.any?
  ARGV.each do |path|
    input = File.read(path)
    temppath = path + ".tmp"
    File.open(temppath, "w") do |output|
      beautify path, input, output
    end
    FileUtils.mv temppath, path
  end
else
  beautify "standard input", $stdin.read, $stdout
end
